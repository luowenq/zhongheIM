<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_nickname"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_224a8e"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/len_10"
            android:layout_marginBottom="@dimen/len_10"
            style="@style/SingleRowTextView"/>
        <TextView
            android:id="@+id/tv_reply"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_bbbbbb"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_nickname"
            android:layout_marginTop="@dimen/len_10"
            android:text="@string/app_reply"
            android:layout_marginBottom="@dimen/len_10"
            style="@style/SingleRowTextView"/>
        <TextView
            android:id="@+id/tv_nickname_to"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            android:textColor="@color/color_224a8e"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_reply"
            android:layout_marginTop="@dimen/len_10"
            android:layout_marginBottom="@dimen/len_10"
            style="@style/SingleRowTextView"/>
        <TextView
            android:id="@+id/tv_content"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_bbbbbb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_nickname_to"
            android:layout_marginTop="@dimen/len_10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/len_16"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginBottom="@dimen/len_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
