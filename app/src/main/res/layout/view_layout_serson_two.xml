<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_serson"
            android:layout_width="0dp"
            android:layout_height="@dimen/len_36"
            android:layout_marginStart="@dimen/len_16"
            android:layout_marginTop="@dimen/len_12"
            android:layout_marginEnd="@dimen/len_16"
            android:layout_marginBottom="@dimen/len_12"
            android:background="@drawable/shape_radios_gralys_whith_4dp_bg"
            android:drawableStart="@drawable/icon_img_serch"
            android:drawablePadding="@dimen/len_16"
            android:hint="@string/app_account"
            android:paddingStart="@dimen/len_16"
            android:paddingEnd="0dp"
            android:inputType="text"
            android:textColorHint="@color/grey_400"
            android:textSize="@dimen/font_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            tools:ignore="Autofill" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>