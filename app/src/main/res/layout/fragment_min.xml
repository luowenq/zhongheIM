<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cl_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp140"
            android:background="@drawable/shape_title_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/len_60"
                android:layout_height="@dimen/len_60"
                android:layout_marginStart="@dimen/len_16"
                android:layout_marginTop="@dimen/len_36"
                android:layout_marginEnd="@dimen/dp30"
                android:layout_marginBottom="@dimen/len_36"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_36"
                android:layout_marginRight="@dimen/len_20"
                android:layout_toLeftOf="@+id/iv_qr_code"
                android:layout_toRightOf="@+id/iv_photo"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="面包会有的面包会有的面包会有的面包会有的面包会有的"
                android:textColor="@color/white"
                android:textSize="@dimen/font_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nickname"
                android:layout_marginTop="@dimen/len_6"
                android:layout_marginRight="@dimen/len_20"
                android:layout_toRightOf="@+id/iv_photo"
                android:text="2151515818541854854"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/len_40"
                android:layout_marginRight="@dimen/len_16"
                android:src="@drawable/icon_qr_code" />

            <ImageView
                android:id="@+id/iv_right_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_qr_code"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/len_14"
                android:layout_marginRight="@dimen/len_16"
                android:src="@drawable/icon_right_white_more" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_76"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_marginTop="@dimen/len_20"
            android:layout_marginRight="@dimen/len_8"
            android:background="@drawable/icon_yinying">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"
                android:layout_marginTop="@dimen/len_12"
                android:drawableLeft="@drawable/icon_pay"
                android:drawableRight="@drawable/icon_right_black_more"
                android:drawablePadding="@dimen/len_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20"
                android:text="支付"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_marginRight="@dimen/len_8"
            android:background="@drawable/icon_yinying_big"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_14"
                android:drawableLeft="@drawable/icon_collection"
                android:drawableRight="@drawable/icon_right_black_more"
                android:drawablePadding="@dimen/len_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_20"
                android:paddingTop="@dimen/len_10"
                android:paddingRight="@dimen/len_20"
                android:paddingBottom="@dimen/len_10"
                android:text="收藏"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_pics"
                android:drawableRight="@drawable/icon_right_black_more"
                android:drawablePadding="@dimen/len_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_20"
                android:paddingTop="@dimen/len_10"
                android:paddingRight="@dimen/len_20"
                android:paddingBottom="@dimen/len_10"
                android:text="相册"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_biaoqing"
                android:drawableRight="@drawable/icon_right_black_more"
                android:drawablePadding="@dimen/len_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_20"
                android:paddingTop="@dimen/len_10"
                android:paddingRight="@dimen/len_20"
                android:paddingBottom="@dimen/len_10"
                android:text="表情"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/len_28"
                android:drawableLeft="@drawable/icon_setting"
                android:drawableRight="@drawable/icon_right_black_more"
                android:drawablePadding="@dimen/len_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_20"
                android:paddingTop="@dimen/len_10"
                android:paddingRight="@dimen/len_20"
                android:paddingBottom="@dimen/len_10"
                android:text="设置"
                android:textColor="@color/color_666666"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_76"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_marginRight="@dimen/len_8"
            android:background="@drawable/icon_yinying">

            <TextView
                android:id="@+id/btn_login_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"
                android:layout_marginTop="@dimen/len_12"
                android:drawableLeft="@drawable/icon_loginout"
                android:drawableRight="@drawable/icon_right_black_more"
                android:drawablePadding="@dimen/len_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_20"
                android:paddingRight="@dimen/len_20"
                android:text="退出登录"
                android:textColor="@color/color_e91818"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</layout>