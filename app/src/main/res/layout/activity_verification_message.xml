<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.exam.fs.push.widget.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:right_btn_isShow="false"
            app:right_icon_res_ishow="false"
            app:right_text_ishow="false" />

        <RadioGroup
            android:id="@+id/rg_verification"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_friend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableBottom="@drawable/selector_home_title_line"
                android:gravity="center"
                android:text="好友验证"
                android:textColor="@drawable/text_selector"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableBottom="@drawable/selector_home_title_line"
                android:gravity="center"
                android:text="群组验证"
                android:textColor="@drawable/text_selector"
                android:textSize="16sp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="#D2D2D2" />

        <com.exam.fs.push.widget.NoScrollViewPager
            android:id="@+id/verification_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.exam.fs.push.widget.NoScrollViewPager>
    </LinearLayout>
</layout>