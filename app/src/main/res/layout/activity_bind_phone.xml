<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:background="@color/color_f4f4f4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.exam.fs.push.widget.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_ico_back="true"
            app:right_btn_isShow="false"
            app:right_icon_res_ishow="false"
            app:right_text_ishow="false" />

        <ImageView
            android:src="@drawable/icon_bind_phone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/len_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_phone"
            android:textSize="@dimen/font_16"
            android:textColor="@color/color_4a4a4a"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_your_phone_number"
            android:layout_marginTop="@dimen/len_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center_horizontal"
            android:text="@string/app_bind_phone_info"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/len_14"
            android:layout_marginRight="@dimen/len_14"
            android:layout_marginTop="@dimen/len_16"
            android:textColor="@color/color_bbbbbb"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_view_address_book"
            android:background="@drawable/shape_40c104_2dp"
            android:layout_marginTop="@dimen/len_16"
            android:layout_marginLeft="@dimen/len_14"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/len_14"
            android:text="@string/app_view_address_book"
            android:textSize="@dimen/font_16"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"/>

        <TextView
            android:id="@+id/btn_update_phone"
            android:background="@drawable/shape_ffffff_2dp"
            android:layout_marginTop="@dimen/len_16"
            android:layout_marginLeft="@dimen/len_14"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/len_14"
            android:text="@string/app_update_phone"
            android:textSize="@dimen/font_16"
            android:textColor="@color/color_40c104"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"/>
    </LinearLayout>
</layout>
