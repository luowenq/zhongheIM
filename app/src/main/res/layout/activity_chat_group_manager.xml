<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:background="@color/color_f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.exam.fs.push.widget.TitleView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:left_ico_back="true"
                app:right_btn_isShow="false"
                app:right_icon_res_ishow="false"
                app:right_text_ishow="false" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_group_member"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingStart="@dimen/len_16"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/len_10"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/titleView"/>
            <RelativeLayout
                android:id="@+id/btn_all"
                app:layout_constraintTop_toBottomOf="@+id/rv_group_member"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_36">
                <TextView
                    android:textColor="@color/color_999999"
                    android:drawablePadding="@dimen/len_6"
                    android:layout_centerHorizontal="true"
                    android:text="@string/app_see_all_group_member"
                    android:drawableEnd="@drawable/icon_right_black_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_name"
                app:layout_constraintTop_toBottomOf="@+id/btn_all"
                android:layout_marginTop="@dimen/len_20"
                app:left_text="@string/app_group_name"
                app:right_icon="@drawable/icon_right_black_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"/>

            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_qr_code"
                app:layout_constraintTop_toBottomOf="@+id/siv_name"
                app:left_text="@string/app_group_qr_code"
                app:right_icon="@drawable/icon_right_black_more"
                app:right_img="@drawable/icon_qr_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"/>
            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_notice"
                app:layout_constraintTop_toBottomOf="@+id/siv_qr_code"
                app:left_text="@string/app_group_notice"
                app:right_icon="@drawable/icon_right_black_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"/>
            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_chat_record"
                app:layout_constraintTop_toBottomOf="@+id/siv_notice"
                app:left_text="@string/app_group_chat_record"
                android:layout_marginTop="@dimen/len_10"
                app:right_icon="@drawable/icon_right_black_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"/>

            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_message_free"
                app:layout_constraintTop_toBottomOf="@+id/siv_chat_record"
                app:left_text="@string/app_group_chat_message_free"
                android:layout_marginTop="@dimen/len_10"
                app:right_icon="@drawable/sel_tab_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"/>
            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_top"
                app:layout_constraintTop_toBottomOf="@+id/siv_message_free"
                app:left_text="@string/app_group_chat_top"
                app:right_icon="@drawable/sel_tab_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"/>
            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_my_nickname"
                app:layout_constraintTop_toBottomOf="@+id/siv_top"
                app:left_text="@string/app_group_my_nickname"
                app:right_icon="@drawable/icon_right_black_more"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/len_10"
                android:layout_height="@dimen/len_44"/>

            <com.exam.fs.push.widget.ShowInfoView
                android:id="@+id/siv_display_nickname"
                app:layout_constraintTop_toBottomOf="@+id/siv_my_nickname"
                app:left_text="@string/app_group_display_nickname"
                app:right_icon="@drawable/sel_tab_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/siv_display_nickname"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/color_e91818"
                android:id="@+id/btn_out"
                android:layout_marginBottom="@dimen/len_20"
                android:text="@string/app_group_delete_out"
                style="@style/matchBtn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
