<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.exam.fs.push.viewmodel.GroupNoticeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.exam.fs.push.widget.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:left_ico_back="true"
            app:right_btn_isShow="false"
            app:right_icon_res_ishow="false"
            app:right_text_ishow="false" />
        <ImageView
            android:id="@+id/img_photo"
            android:layout_marginTop="@dimen/len_14"
            app:layout_constraintTop_toBottomOf="@+id/titleView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/len_16"
            android:layout_width="@dimen/len_36"
            android:scaleType="fitXY"
            android:layout_height="@dimen/len_36"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/tv_nickname"
            app:layout_constraintTop_toBottomOf="@+id/titleView"
            app:layout_constraintStart_toEndOf="@+id/img_photo"
            android:layout_marginStart="@dimen/len_8"
            android:layout_marginTop="@dimen/len_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{viewModel.nickname}"
            android:layout_marginEnd="@dimen/len_16"
            style="@style/boldTextView"/>
        <TextView
            android:id="@+id/tv_time"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_cccccc"
            android:text="@{viewModel.time}"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/img_photo"
            android:layout_marginStart="@dimen/len_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line"
            app:layout_constraintTop_toBottomOf="@+id/img_photo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/len_16"
            android:layout_marginEnd="@dimen/len_16"
            android:layout_marginTop="@dimen/len_4"
            style="@style/line"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="@dimen/len_10"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginEnd="@dimen/len_16"
            android:layout_marginStart="@dimen/len_16"
            android:layout_marginEnd="@dimen/len_16"
            android:layout_width="match_parent"
            android:text="@{viewModel.content}"
            android:textColor="@color/color_4a4a4a"
            style="@style/boldTextView"/>

        <View
            app:layout_constraintEnd_toStartOf="@+id/tv_up_edit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/len_48"
            android:layout_marginStart="@dimen/len_76"
            android:layout_marginEnd="@dimen/len_8"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/line"/>

        <TextView
            android:id="@+id/tv_up_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/len_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/app_only_group_up_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            app:layout_constraintStart_toEndOf="@+id/tv_up_edit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/len_48"
            android:layout_marginEnd="@dimen/len_76"
            android:layout_marginStart="@dimen/len_8"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/line"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
